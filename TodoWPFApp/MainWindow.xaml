<Window x:Class="TodoWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Основной TextBox -->
                            <ScrollViewer 
                            x:Name="PART_ContentHost" 
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                            <!-- Текст-подсказка -->
                            <TextBlock 
                            x:Name="placeholderText"
                            Text="{TemplateBinding Tag}"
                            Foreground="Gray"
                            Visibility="Collapsed"
                            Margin="5,0,0,0"
                            IsHitTestVisible="False"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Показывать подсказку, если Text пуст -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Форма добавления задачи -->
        <StackPanel Grid.Row="0" Margin="10">
            <!-- TextBox с подсказкой -->
            <TextBox 
            x:Name="txtTitle" 
            Style="{StaticResource PlaceholderTextBoxStyle}" 
            Tag="Название задачи" 
            Margin="0,0,0,5"
            Foreground="Black"/>

            <TextBox 
            x:Name="txtDescription" 
            Style="{StaticResource PlaceholderTextBoxStyle}" 
            Tag="Описание" 
            Margin="0,0,0,5"/>

            <DatePicker 
            x:Name="dpDueDate" 
            Margin="0,0,0,5"
            SelectedDateFormat="Short"/>

            <Button 
            Content="Добавить задачу" 
            Click="AddTask_Click"
            Padding="10,5"/>
        </StackPanel>

        <!-- Список задач -->
        <ListView 
        Grid.Row="1" 
        x:Name="lvTasks" 
        Margin="10">
            <ListView.View>
                <GridView>
                    <!-- Колонка для чекбокса -->
                    <GridViewColumn Width="100">
                        <GridViewColumnHeader Content="Завершено"/>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox 
                                IsChecked="{Binding IsCompleted}" 
                                HorizontalAlignment="Center"
                                Click="CheckBox_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Колонки для данных -->
                    <GridViewColumn 
                    Header="Название" 
                    DisplayMemberBinding="{Binding Title}" 
                    Width="200"/>

                    <GridViewColumn 
                    Header="Описание" 
                    DisplayMemberBinding="{Binding Description}" 
                    Width="300"/>

                    <GridViewColumn 
                    Header="Срок" 
                    DisplayMemberBinding="{Binding DueDate, StringFormat=dd.MM.yyyy}" 
                    Width="150"/>

                    <!-- Колонка для кнопки удаления -->
                    <GridViewColumn Width="100">
                        <GridViewColumnHeader Content="Действия"/>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                Content="Удалить" 
                                Click="DeleteTask_Click"
                                Padding="5,2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
